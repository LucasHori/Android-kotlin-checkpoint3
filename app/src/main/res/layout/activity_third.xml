<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="ThirdActivity">

    <TextView
        android:id="@+id/transferValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/pixKeyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/confirmTransferButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirmar_transferencia"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/reviewPixButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/revisar_chave_pix"
        android:layout_marginTop="8dp"/>

</LinearLayout>
